{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Current Test",
            "type": "shell",
            "command": "misc/run_tests.sh",
            "args": ["--only-build", "${relativeFileDirname}/${fileBasename}"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
